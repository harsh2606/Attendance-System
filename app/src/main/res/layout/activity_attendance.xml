<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewClickHandler"
            type="com.system.ui.attendace.viewmodel.AttendanceViewModel.ViewClickHandler" />

        <variable
            name="viewModel"
            type="com.system.ui.attendace.viewmodel.AttendanceViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient"
            android:orientation="vertical"
            tools:context=".ui.attendace.view.AttendanceActivity">

            <include
                android:id="@+id/topbar"
                layout="@layout/topbar" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp">

                        <androidx.cardview.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            app:cardMaxElevation="6dp"
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_160sdp"                            android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/percentage"
                                    android:visibility="visible" />


                                <com.system.custom.CTextView
                                    style="@style/txt_000_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Attendance"
                                    android:layout_gravity="bottom|center"
                                    android:padding="@dimen/_8sdp"/>



                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            app:cardMaxElevation="6dp"
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1">

                            <com.system.custom.CTextView
                                style="@style/txt_000_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Java"
                                android:layout_gravity="bottom|center"
                                android:padding="@dimen/_10sdp"/>




                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            app:cardMaxElevation="6dp"
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1">

                            <com.system.custom.CTextView
                                style="@style/txt_000_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Php"
                                android:layout_gravity="bottom|center"
                                android:padding="@dimen/_10sdp"/>




                        </androidx.cardview.widget.CardView>








                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            app:cardMaxElevation="6dp"
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue">

                            <com.system.custom.CTextView
                                style="@style/txt_white_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android"
                                android:layout_gravity="bottom|center"
                                android:padding="@dimen/_10sdp"/>




                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp"
                            app:cardMaxElevation="6dp"
                            app:cardUseCompatPadding="true"
                            android:layout_weight="1">

                            <com.system.custom.CTextView
                                style="@style/txt_000_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OSC"
                                android:layout_gravity="bottom|center"
                                android:padding="@dimen/_10sdp"/>




                        </androidx.cardview.widget.CardView>








                    </LinearLayout>





                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </FrameLayout>
</layout>